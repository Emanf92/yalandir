---
import qmaze from '../data/qmark-maze.json';
import type { QTile } from "../interfaces/qtile.interface";
import { QuestionFloor} from "../components/question-floor/QuestionFloor";
import Layout from "../layouts/Layout.astro";

const maze: QTile[][] = qmaze.map((qrow: string[]) => {
    return qrow.map((qcell: string) => {
        return {
            type: qcell,
            broken: false,
            clicked: false,
            next: () => null
        }
    })
})
---
<Layout title="Coins">
    <div class="page">
        <h1>Question Maze</h1>
        <div class="maze-container">
            <QuestionFloor client:load maze={maze} />
        </div>
    </div>
</Layout>
<style>
    .page {
        padding: 50px;
    }
    h1 {
        margin: 0;
        color: white;
    }
    .maze-container {
        margin-top: 30px;
        display: block;
        flex-wrap: wrap;
        grid-template-columns: 1fr 1fr;
        grid-gap: 30px;
        justify-content: center;
    }
</style>